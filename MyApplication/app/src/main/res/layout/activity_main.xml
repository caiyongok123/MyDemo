<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/button"
            android:textAllCaps="false"
            android:text="自定义TabLayout视图"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />

        <Button
            android:id="@+id/button1"
            android:textAllCaps="false"
            android:text="CoordinatorLayout嵌套ViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/button2"
            android:textAllCaps="false"
            android:text="播放GIF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
        <Button
            android:id="@+id/button3"
            android:textAllCaps="false"
            android:text="Fragment进出动画"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/button4"
            android:textAllCaps="false"
            android:text="AES加密"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/button5"
            android:textAllCaps="false"
            android:text="电源设置阻止熄屏后或后台的计时器休眠"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/button7"
            android:textAllCaps="false"
            android:text="使用系统下载器下载"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取系统相册所有图片"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button8"
            android:textAllCaps="false"
            android:text="手机旋转监听"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/button9"
            android:textAllCaps="false"
            android:text="日历"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/button10"
            android:textAllCaps="false"
            android:text="ViewPager显示一组网络图片"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/button11"
            android:textAllCaps="false"
            android:text="AR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <com.example.cy.myapplication.widget.view.CustomView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="#f00"
            />

        <Button
            android:id="@+id/button12"
            android:textAllCaps="false"
            android:text="GreenDao数据库操作"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</ScrollView>
